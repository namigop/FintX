<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:footer="clr-namespace:Tefin.ViewModels.Footer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="footer:FooterViewModel"
             x:Class="Tefin.Views.Footer.FooterView">
    <Grid Background="{Binding Background}" Height="32">
        <TextBlock Text="{Binding Message}"
                   Margin="12 0 0 0"
                   FontSize="12"
                   VerticalAlignment="Center" Foreground="#FAF4F5" />
    </Grid>
</UserControl>