<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:typeEditors="clr-namespace:Tefin.ViewModels.Types.TypeEditors"
             xmlns:controls="clr-namespace:Tefin.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="typeEditors:Float32Editor"
             x:Class="Tefin.Views.Types.TypeEditors.Float32EditorView">
    <Border x:Name="MainBorder">
        <Grid ColumnDefinitions="*">
            <TextBox IsVisible="{Binding TypeNode.IsEnvVarTagVisible}"
                     VerticalAlignment="Center"
                     Text="{Binding TypeNode.EnvVarTag}">
            </TextBox>

            <controls:Number Value="{Binding TempValue, Mode=TwoWay}"
                             IsVisible="{Binding !TypeNode.IsEnvVarTagVisible}"
                             MinWidth="80" />
        </Grid>
    </Border>
</UserControl>