<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:typeEditors="clr-namespace:Tefin.ViewModels.Types.TypeEditors"
             xmlns:controls="clr-namespace:Tefin.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="typeEditors:NullableInt16Editor"
             x:Class="Tefin.Views.Types.TypeEditors.NullableInt16EditorView">
    <Border x:Name="MainBorder">
        <StackPanel>
            <controls:Number Value="{Binding TempValue, Mode=TwoWay}"
                             IsEnabled="{Binding !IsNull}"
                             Width="80"
                             Minimum="-32767"
                             Maximum="32767" />
            <CheckBox Margin="6 0 0 0" IsChecked="{Binding IsNull}" Content="null"
                      IsVisible="{Binding AcceptsNull}" />
        </StackPanel>
    </Border>
</UserControl>