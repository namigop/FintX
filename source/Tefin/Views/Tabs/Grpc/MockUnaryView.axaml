<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:grpc="clr-namespace:Tefin.ViewModels.Tabs.Grpc"
             xmlns:controls="clr-namespace:Tefin.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="grpc:MockUnaryViewModel"
             x:Class="Tefin.Views.Tabs.Grpc.MockUnaryView">
    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0">
            <Button Command="{Binding AddScriptCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:IconControl Icon="{StaticResource Icon.Script}"></controls:IconControl>
                    <TextBlock VerticalAlignment="Center" Text=" + script"></TextBlock>
                </StackPanel>
                
            </Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
        <ItemsControl ItemsSource="{Binding Scripts}" Background="Transparent">
           
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                        <Grid RowDefinitions="Auto, *" Margin="8 16 8 8">
                            
                            <Panel Grid.Row="0"  Height="20"></Panel>
                                <!-- <controls:TextEditControl Grid.Row="0" TextToEdit="{Binding Header}" -->
                                <!--                           TempTextToEdit="{Binding HeaderTemp}" -->
                                <!--                           FontSize="16" ></controls:TextEditControl> -->
                                <!-- <Button Margin="8 0 0 0"> -->
                                <!--     <controls:IconControl Icon="{StaticResource Icon.EditType}" VerticalAlignment="Center"></controls:IconControl> -->
                                <!-- </Button> -->
                            
                            <Border BorderBrush="{Binding SelectedColor}" BorderThickness="3 1 1 1 " Grid.Row="1" CornerRadius="6" >
                                <controls:JsonEditor  Text="{Binding ScriptText}" Padding="4"  />
                            </Border>
                            
                            <Border ZIndex="100" Background="#1E1F22" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 -18 50 0"
                                    BorderThickness="1"
                                    BorderBrush="{Binding SelectedColor}" CornerRadius="6">
                                <StackPanel Orientation="Horizontal" Margin="8 2 8 2"> 
                                    <ToggleSwitch OnContent="Active" OffContent="Inactive" IsChecked="{Binding IsSelected}"></ToggleSwitch>    
                                    <Button  Classes="ClearButtonStyle" Margin="8 0 0 0" 
                                             ToolTip.Tip="Compile any C# expressions found in the script"
                                             Command="{Binding CompileCommand}">
                                        <controls:IconControl Icon="{StaticResource Icon.Build}"></controls:IconControl>
                                    </Button>
                                    <Button  Classes="ClearButtonStyle" Margin="8 0 0 0" ToolTip.Tip="Remove this script">
                                        <controls:IconControl Icon="{StaticResource Icon.Delete}"></controls:IconControl>
                                        <Button.Flyout>
                                            <Flyout Placement="BottomEdgeAlignedLeft">
                                                <Grid RowDefinitions="*, Auto" Height="100">
                                                    <TextBlock Text="Are you sure?" VerticalAlignment="Center"
                                                               HorizontalAlignment="Center" />

                                                    <Border BorderBrush="DimGray" BorderThickness="0 1 0 0" Grid.Row="1" Margin="0 10 0 0">
                                                        <StackPanel Orientation="Horizontal" Margin="0 12 0 0" HorizontalAlignment="Right">
                                                            <Button Click="DeleteButtonClick">
                                                                <TextBlock Text="Yes, delete it" />
                                                            </Button>
                                                            <Button Click="CancelButtonClick" Margin="6 6 6 6">
                                                                <TextBlock Text="Cancel" />
                                                            </Button>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </Border>
                            
                        </Grid>
                    
                    
                
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
    </Grid>
    
    
</UserControl>
